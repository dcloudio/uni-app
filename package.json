{
  "private": true,
  "version": "3.0.0-alpha-3030020211206001",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf node_modules **/*/node_modules && pnpm install",
    "build": "node scripts/build.js",
    "build:h5": "node scripts/build.js uni-app uni-cli-shared uni-h5 uni-i18n uni-stat uni-shared uni-h5-vite vite-plugin-uni",
    "build:app": "node scripts/build.js uni-app-plus uni-app-vite uni-app-vue uni-cli-nvue",
    "build:mp": "node scripts/build.js uni-mp-vue uni-mp-vite uni-mp-alipay uni-mp-baidu uni-mp-kuaishou uni-mp-lark uni-mp-qq uni-mp-toutiao uni-mp-weixin uni-quickapp-webview",
    "size": "npm run build size-check",
    "lint": "eslint packages/*/src/**/*.ts",
    "format": "prettier --write --parser typescript \"packages/**/*.ts?(x)\"",
    "test": "jest",
    "preinstall": "node ./scripts/preinstall.js",
    "e2e:ssr:dev": "cd packages/playground/ssr && npm run dev:ssr",
    "e2e:ssr:open": "cd packages/playground/ssr && npx cypress open",
    "release": "node scripts/release.js"
  },
  "types": "test-dts/index.d.ts",
  "tsd": {
    "directory": "test-dts"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@dcloudio/types": "^2.5.13",
    "@dcloudio/uni-api": "3.0.0-alpha-3030020211206001",
    "@jest/types": "^27.0.2",
    "@microsoft/api-extractor": "^7.13.2",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-strip": "^2.0.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/parser": "^5.3.0",
    "@vitejs/plugin-vue": "^1.10.1",
    "@vitejs/plugin-vue-jsx": "^1.3.0",
    "@vue/reactivity": "3.2.23",
    "@vue/runtime-core": "3.2.23",
    "@vue/runtime-dom": "3.2.23",
    "@vue/shared": "3.2.23",
    "chalk": "^4.1.1",
    "core-js": "^2.6.12",
    "enquirer": "^2.3.6",
    "eslint": "^7.17.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^10.5.3",
    "mini-types": "^0.1.7",
    "minimist": "^1.2.5",
    "miniprogram-api-typings": "^3.4.4",
    "prettier": "^2.4.1",
    "rollup": "^2.57.0",
    "rollup-plugin-jscc": "^2.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-vue": "^6.0.0",
    "semver": "^7.3.5",
    "ts-jest": "^27.0.3",
    "typescript": "^4.4.3",
    "vite": "^2.6.14",
    "vue": "3.2.23",
    "vue-router": "^4.0.12",
    "yorkie": "^2.0.0"
  },
  "name": "uni-app-next"
}
