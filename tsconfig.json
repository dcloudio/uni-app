{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": [
      "jest",
      "node",
      "vue-router",
      "@dcloudio/types",
      "miniprogram-api-typings"
    ],
    "rootDir": ".",
    "paths": {
      "@dcloudio/*": ["packages/*/src"],
      "@dcloudio/uni-app-plus/*": ["packages/uni-app-plus/src/*"],
      "@dcloudio/uni-h5/*": ["packages/uni-h5/src/*"],
      "@dcloudio/uni-platform": ["packages/uni-h5/src/platform/index.ts"],
      "@dcloudio/uni-ext-api": ["uni-ext-api/uni_modules/*"]
    }
  },
  "files": [
    "./packages/global.d.ts",
    "./packages/shims-api.d.ts",
    "./packages/shims-node.d.ts",
    "./packages/shims-uni-app.d.ts",
    "./packages/shims-vue-runtime.d.ts",
    "./packages/shims-vue.d.ts",
    "./node_modules/@dcloudio/uni-app-x/types/native-global/index.d.ts"
  ]
}
