{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["jest", "@dcloudio/types", "miniprogram-api-typings"],
    "rootDir": ".",
    "paths": {
      "types/alias": ["packages/uni-cli-shared/types/alias.d.ts"],
      "@dcloudio/*": ["packages/*/src"],
      "@dcloudio/uni-app-plus/*": ["packages/uni-app-plus/src/*"],
      "@dcloudio/uni-h5/*": ["packages/uni-h5/src/*"],
      "@dcloudio/uni-platform": ["packages/uni-h5/src/platform/index.ts"]
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/shims-node.d.ts",
    "packages/shims-uni-app.d.ts",
    "packages/shims-vue-runtime.d.ts",
    "packages/shims-vue.d.ts",
    "packages/uni-app-x.d.ts",
    "packages/*/src",
    "packages/*/__tests__",
    "test-dts",
    "packages/uni-h5/types",
    "packages/uni-app-vite/types",
    "packages/uni-cli-shared/types",
    "node_modules/mini-types/types/api/index.d.ts",
    "node_modules/mini-types/types/page.d.ts",
    "node_modules/mini-types/types/component.d.ts",
    "node_modules/mini-types/types/event.d.ts"
  ],
  "exclude": ["packages/uni-uts-v1/__tests__/tsc"]
}
