{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "node",
      "@dcloudio/types"
    ]
  },
  "include": [
    "src",
    "./lib/source-map/source-map.d.ts"
  ]
}