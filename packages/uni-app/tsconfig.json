{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./dist/packages/",
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["ESNext", "DOM"]
  },
  "include": [
    "src",
    "../global.d.ts",
    "../shims-uni-app.d.ts",
    "../shims-vue-runtime.d.ts"
  ]
}
